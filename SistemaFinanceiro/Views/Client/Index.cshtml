@model List<Model.Entity.Client>
@{
    ViewBag.Title = "Lista de Clientes";
}
<a href="">Relatórios</a>
<h2 class="text-center text-success">Lista de Clientes</h2>
<div class="well well-sm">
    <a class="btn btn-primary" href="~/Client/Create">Novo</a>
    <a class="btn btn-info" href="~/Client/SearchClients">Buscar</a>
</div>
<table class="table table-hover table-striped">
    <thead>

        <tr class="bg-primary">
            <th>Código</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th colspan="3">Operações</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var objClient in Model)
        {
            <tr>
                <td>@objClient.IdClient</td>
                <td>@objClient.Name</td>
                <td>@objClient.Cpf</td>
                <td>@objClient.Address</td>
                <td>@objClient.Telephone</td>
                <td><a class="btn btn-success" href="~/Client/Details/@objClient.IdClient"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Client/Edit/@objClient.IdClient"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Client/Delete/@objClient.IdClient"><span class="fa fa-book"></span></a></td>
            </tr>
        }
    </tbody>
</table>

