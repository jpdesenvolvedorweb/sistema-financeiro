@model Model.Entity.Product
@{
    ViewBag.Title = "Novo Produto";
}

<div class="well well-sm text-primary text-center">
    @ViewBag.MessageBegin
</div>

@*@Html.EditorForModel()*@
@{
    Html.EnableClientValidation(false);
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.IdProduct, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.IdProduct, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Digite o código..." } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite o produto..." } })
                </div>
            </div>
            <div class="form-group">

                @Html.LabelFor(model => model.UnitPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite o preço..." } })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IdCategory, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 dropdown">

                    @Html.DropDownListFor(model => model.IdCategory, ViewBag.ListCategories as SelectList, "Selecione uma Categoria", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </fieldset>

        <div class="form-actions col-md-offset-2">
            <input class="btn btn-primary" type="submit" name="btnguardar" value="Salvar" />|
            @Html.ActionLink("Voltar a Lista", "Index")
        </div>
    </div>

}
<div class="text-primary text-success text-center">
    @ViewBag.MessageSucess;
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MessageError;
</div>