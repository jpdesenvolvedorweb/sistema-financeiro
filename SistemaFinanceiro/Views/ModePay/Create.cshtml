@model Model.Entity.ModePay
@{
    ViewBag.Title = "Nova Forma de Pagamento";
}
<div class="well well-sm text-primary text-center">
    @ViewBag.MessageBegin
</div>

@*Html.EditorForModel*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite o Modo de Pagamento" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OtherDetails, htmlAttributes: new { @class = "control-label  col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.OtherDetails, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite os outros detalhes" } })
                </div>
            </div>

        </fieldset>

        <div class="form-actions col-md-offset-2">
            <input class="btn btn-primary" type="submit" name="btnsalvar" value="Salvar" />
            @Html.ActionLink("Voltar para a Lista", "Index")
        </div>
    </div>
}
<div class="text-primary text-success text-center">
    @ViewBag.MessageSucess;
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MessageError;
</div>


