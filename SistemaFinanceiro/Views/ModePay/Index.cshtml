@model List<Model.Entity.ModePay>
@{
    ViewBag.Title = "Lista de Modos de Pagamento";
}
<a href="">Relatórios</a>
<h2 class="text-center text-success">Lista de Modos de Pagamento</h2>
<div class="well well-sm">
    <a class="btn btn-primary" href="~/ModePay/Create">Novo</a>
    <a class="btn btn-info" href="~/ModePay/SearchModePays">Buscar</a>
</div>
<table class="table table-hover table-striped">
    <thead>

        <tr class="bg-primary">
            <th>Código</th>
            <th>Nome</th>
            <th>Outros Detalhes</th>
            <th colspan="3">Operações</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var objModePay in Model)
        {
            <tr>
                <td>@objModePay.IdModePay</td>
                <td>@objModePay.Name</td>
                <td>@objModePay.OtherDetails</td>
                <td><a class="btn btn-success" href="~/ModePay/Details/@objModePay.IdModePay"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/ModePay/Edit/@objModePay.IdModePay"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/ModePay/Delete/@objModePay.IdModePay"><span class="fa fa-book"></span></a></td>
            </tr>
        }
    </tbody>
</table>